{{> nav}}
<main class="home-container">
  <div class="profile-container">
    <div class="profile-pic">
      <img src="{{user.image}}" alt="empty">
    </div>
    <div class="profile-info">
      <p>{{user.firstName}} {{user.lastName}}</p>
      <p>{{age}} years old</p>
      <p>Lonely Level: {{user.lonelyLevel}}</p>
    </div>
    <div class="profile-nav">
      <ul class="profile-list">
        <li class="profile-items">
          <a href="/profile">Profile</a>
        </li>
        <li class="profile-items">
          <a href="user/requests">Lonely Requests</a>
        </li>
        <li class="profile-items">
          <a href="user/partners">Lonely Partners</a>
        </li>
        <li class="profile-items">
          <a href="user/suggestions">{{#if suggestionCount}}Suggestions(<span class="number"> {{suggestionCount}} </span>){{else}}Suggestions{{/if}}</a>
        </li>
      </ul>
    </div>
  </div>
  <div class="feed-container">
    <div class="post-card">
      <form class="post-form" action="/post" method="POST">
        <div class="pic-post">
          <img src="{{user.image}}" alt="empty">
          <textarea name="post" cols="30" rows="10" placeholder="How lonely are you today?" required></textarea>
        </div>
        <button class="post-btn">POST</button>
      </form>
    </div>
  </div>
</main>