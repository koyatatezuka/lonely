<main class="main-container">
  <div class="profile-container">
    <div class="profile-pic">
      <img src="{{user.image}}" alt="empty">
    </div>
    <div class="profile-info">
      <p>{{user.firstName}} {{user.lastName}}</p>
      <p>{{age}} years old</p>
      <p>Lonely Level: {{user.lonelyLevel}}</p>
    </div>
    <div class="profile-nav">
      <ul class="profile-list">
        <li class="profile-items">
          <a href="/profile">Profile</a>
        </li>
        <li class="profile-items">
          <a href="/user/requests">Lonely Requests</a>
        </li>
        <li class="profile-items">
          <a href="/user/partners">Lonely Partners</a>
        </li>
        <li class="profile-items">
          <a href="/user/suggestions">{{#if suggestionCount}}Suggestions(<span class="number"> {{suggestionCount}} </span>){{else}}Suggestions{{/if}}</a>
        </li>
      </ul>
    </div>
  </div>
  <div class="partners-container">
    <h1 class="users-header">Lonely Partners</h1>
    <div class="partners-content">
    {{#each userPartners}}
      <div class="partners-card">
        <a href="/user/byuser/{{this.id}}"><img class="partners-image" src="{{this.image}}" alt="{{this.firstName}}"></a>
        <div class="partners-user">
          <p>{{this.firstName}} {{this.lastName}}</p>
        </div>
      </div>
    {{/each}}
    </div>
  </div>
</main>