<header class="header-container">
  {{!-- menu icon --}}
  <div class="menu-icon">
    <i class="fas fa-bars"></i>
  </div>
  {{!-- modal --}}
  <div class="backdrop">

  </div>
  {{!-- search main --}}
  <div class="search">
    <h1>Lonely
      <i class="fas fa-cat"></i>
    </h1>
    <form class="search-form" action="/user/search" method="POST">
      <input type="text" name="search" placeholder="Name...">
      <button class="search-btn">Find</button>
    </form>
  </div>
  {{!-- nav main --}}
  <nav class="header-nav">
    <ul class="nav-list">
      <li class="nav-items">
        <a href="/">Home</a>
      </li>
      <li class="nav-items">
        <a href="/message">Message</a>
      </li>
      <li class="nav-items">
        <a href="/log/out">Log Out</a>
      </li>
    </ul>
  </nav>

  {{!-- mobile nav --}}
  <div class="mobile">
    <div class="mobile-logo">
      <i class="fas fa-cat"></i>
    </div>
    <div class="mobile-search">
      <form class="mobile-form" action="/user/search" method="POST">
        <input type="text" name="search" placeholder="Name...">
        <button class="mobile-btn"><i class="fas fa-search"></i></button>
      </form>
    </div>
    <nav class="mobile-nav">
      <ul class="mobile-list">
        <li class="mobile-items">
          <a href="/">Home</a>
        </li>
        <li class="mobile-items">
          <a href="/user/partners">Lonely Partners</a>
        </li>
        <li class="mobile-items">
          <a href="/user/requests">{{#if requestCount}}Lonely Requests(<span class="number"> {{requestCount}} </span>){{else}}Lonely Requests{{/if}}</a>
        </li>
        <li class="mobile-items">
          <a href="/user/suggestions">{{#if suggestionCount}}Suggestions(<span class="number"> {{suggestionCount}} </span>){{else}}Suggestions{{/if}}</a>
        </li>
        <li class="mobile-items">
          <a href="/profile">Profile</a>
        </li>
        <li class="mobile-items">
          <a href="/message">Message</a>
        </li>
        <li class="mobile-items">
          <a href="/log/out">Log Out</a>
        </li>
      </ul>
    </nav>
    <div class="mobile-copyright">
      <p>&copy; 2019 Lonely, Inc</p>
    </div>
  </div>
</header>